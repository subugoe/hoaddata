Package: hoaddata
Type: Package
Title: Data about hybrid open access journal publishing
Version: 0.1.0
Authors@R: 
    person("Najko", "Jahn", , "najko.jahn@sub.uni-goettingen.de", 
    role = c("aut", "cre"),
    comment = c(ORCID = "0000-0001-5105-1463")
